" HARDCORE mode (can't use arrows at all)
no <down> <Nop>
no <left> <Nop>
no <right> <Nop>
no <up> <Nop>

ino <down> <Nop>
ino <left> <Nop>
ino <right> <Nop>
ino <up> <Nop>

" show line numbers
set number

" tab configuration
set shiftwidth=4 smarttab tabstop=8 expandtab softtabstop=0

" auto indentation
set autoindent

" Shows the keys im pressing on normal mode
set showcmd
